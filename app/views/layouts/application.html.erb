<!DOCTYPE html>
<html>
<head>
  <title>Photogram</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar navbar-default">
	<div class="navbar-container">
		<div class="navbar-header">
			<button class="navbar-toggle collapsed" data-target="#navbar-collapse" data-toggle="collapse" type="button">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<div class="navbar-brand"><%= link_to "Photogram", root_path %></div>
		</div>
		<div class="collapse navbar-collapse" id="navbar-collapse">
			<ul class="nav navbar-nav navbar-right">
				<li><%= link_to "Upload Photo", new_post_path %></li>
				<li><%= link_to "Login", root_path %></li>
				<li><%= link_to "Sign Up", root_path %></li>
			</ul>
		</div>
	</div>
</div>

<div class="container">
	<% flash.each do |name, msg| %>
		<div class="alert-container">
			<%= content_tag :div, msg, class: [ 'alert', alert_for(name), 'text-center' ] %>
		</div>
	<% end %>
	<%= yield %>
</div>

</body>
</html>
