<div class="navbar navbar-default">
	<div class="navbar-container">
		<div class="navbar-header">
			<button class="navbar-toggle collapsed" data-target="#navbar-collapse" data-toggle="collapse" type="button">
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<div class="navbar-brand">
				<div class="brand-wrapper">
					<%= link_to root_path do %>
						<%= image_tag('logo.svg', size: "40", class: 'logo') %>
					<% end %>
				</div>
			</div>
		</div>
		<div class="collapse navbar-collapse" id="navbar-collapse">
			<ul class="nav navbar-nav navbar-right">
				<% if user_signed_in? %>
					<li class="profile-nav-li">
						<span class="glyphicon glyphicon-zoom-in maximize"></span>
						<%= link_to user_posts_path(current_user) do %>
							<%= image_tag(current_user.avatar.url(:small), size: "40", class: "img-circle") %>
						<% end %>
					</li>
					<li><%= link_to "Upload Photo", new_post_path %></li>
					<li><%= link_to "My Account", edit_user_registration_path %></li>
					<li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
				<% else %>
					<li><%= link_to "Login", new_user_session_path %></li>
					<li><%= link_to "Sign Up", new_user_registration_path %></li>
				<% end %>
			</ul>
		</div>
	</div>
</div>