<div class="posts-wrapper">
	<div class="post">
		<%= form_image_select @post %>
		<%= simple_form_for @post, html: { multipart: true, autocomplete: :off } do |f| %>
			<div class="row">
				<div class="col-md-12 text-center">
					<%= f.error_notification %>
				</div>
			</div>
			<div class="container-fluid">
				<div class="form-group text-center">
					<h4>Upload an image</h4>
					<%= f.input :image, label: false, input_html: { onChange: 'loadFile(event)' } %>
				</div>
				<div class="form-group text-center">
					<%= f.input :caption, label: false, placeholder: 'Add your caption' %>
				</div>
				<div class="form-group text-center">
					<%= f.button :submit, class: 'btn-success btn-block', data: { disable_with: 'Please wait...' } %>
				</div>
			</div>
		<% end %>
	</div>
</div>