<div class="posts-wrapper row">
	<div class="post">
		<div class="post-head">
			<div class="name">
				Walter White
			</div>
		</div>
		<div class="image center-block">
			<%= image_tag @post.image.url(:medium) %>
		</div>
		<p class="caption">
			<%= @post.caption %>
		</p>
		<div class="text-center">
			<%= link_to "Back to Posts", posts_path %>
		</div>
	</div>
</div>