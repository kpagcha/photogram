$('#comments_<%= @post.id %>').html("<%= j render @post.last_comments(Post.comment_limit), post: @post, comment: @comment %>");
<% if @post.comments.count > 5 %>
	if($('#comments_<%= @post.id %>').last().attr('class') != 'see-comments-wrapper')
		$('#comments_<%= @post.id %>').append("<%= j render 'posts/see_comments_wrapper', post: @post %>")
<% end %>