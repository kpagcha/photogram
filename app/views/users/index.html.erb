<% if current_user == @user %>
 	<div class="text-center profile-header">
 		<h2><%= current_user.user_name %></h2>
 		<div class="info col-sm-7 col-sm-offset-2">
	 		<div class="col-sm-4 border-right"><%= pluralize(@posts.count, 'post') %></div>
	 		<div class="col-sm-4 border-right"><%= pluralize(current_user.followers.count, 'follower') %></div>
	 		<div class="col-sm-4"><%= current_user.followed.count %> following</div>
	 	</div>
 	</div>
<% else %>
	<div class="follow">
		<% if current_user.follows? @user %>
			<%= link_to"Unfollow", unfollow_user_path(@user), method: :put %>
		<% else %>
			<%= link_to "Follow", follow_user_path(@user), method: :put %>
		<% end %>
	</div>
<% end %>
<% @posts.each do |post| %>
	<%= render 'posts/post', post: post %>
<% end %>